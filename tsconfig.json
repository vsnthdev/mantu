{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "charset": "UTF-8",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "newLine": "LF",
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "rootDir": "src",
        "target": "ES6",
        "resolveJsonModule": true
    }
}